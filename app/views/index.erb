<div class="container-fluid text-center">
  <h1>Contact List App v.4</h1>

  <div class="row">
    <button type="button" class="btn btn-primary" onclick="displayAllContacts()">List All Contacts</button>
  </div>

  <hr>
  <div class="row">
    <form id="form" class="text-center form-horizontal">
      <div class="row col-sm-4 col-md-offset-4">
        <input id="searchQuery" class="form-control" placeholder="First Name/Last Name/Email" required>
        <button type="button" class="btn btn-primary" onclick="searchContacts()">Search Contacts</button> 
      </div> 
    </form>
  </div>
  <hr>

  <div id="form_add" class="row">
    <form id="form" class="text-center form-horizontal">
      <div class="row col-sm-4 col-md-offset-4">
        <input id="firstName" class="form-control" placeholder="First Name" required>
        <input id="lastName" class="form-control" placeholder="Last Name" required>
        <input id="email" class="form-control" placeholder="Email" required>
        <button type="button" class="btn btn-primary" onclick="addContact()">Add a Contact</button> 
      </div> 
    </form>
  </div>
  <hr>

  <table class="table table-striped col-md-12">
    <thead>
      <tr>
        <th class="text-center">First Name</th>
        <th class="text-center">Last Name</th>
        <th class="text-center">Email</th>
        <th class="text-center"></th>  
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
  
</div>